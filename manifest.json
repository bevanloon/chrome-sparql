{
  "manifest_version": 3,
  "name": "SPARQL Confetti",
  "version": "1.0",
  "description": "Adds sparkly confetti when SPARQL is found on any page",
  "permissions": [
    "activeTab"
  ],
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "SPARQL Confetti"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["confetti.css"]
    }
  ]
}